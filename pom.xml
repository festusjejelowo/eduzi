<build>
    <extensions>
             <!-- Enabling the use of SSH -->
        <extension>
    	     <groupId>org.apache.maven.wagon</groupId>
    	     <artifactId>wagon-ssh</artifactId>
    	     <version>1.0-beta-6</version>
        </extension>
    </extensions>
    <plugins>
      <plugin>
	  <groupId>org.apache.maven.plugins</groupId>
	  <artifactId>maven-compiler-plugin</artifactId>
	  <version>3.1</version>
	  <configuration>
	      <source>1.8</source>
	      <target>1.8</target>
	  </configuration>
        </plugin>
       <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals><goal>copy-dependencies</goal></goals>
          </execution>
        </executions>
      </plugin>
     <plugin>
     <groupId>org.codehaus.mojo</groupId>
	  <artifactId>wagon-maven-plugin</artifactId>
	  <version>1.0-beta-3</version>
	  <executions>
	    <execution>
	    <id>upload-dependency</id>
	    <phase>install</phase>
	    <goals><goal>upload</goal></goals>
	    <configuration>
		<fromDir>${lib.local.dir}</fromDir>
		<includes>*</includes>
		<url>${lib.remote.url}</url>
		<toDir>${lib.remote.dir}</toDir>
		<serverId>${lib.remote.server.id}</serverId>
	    </configuration>
	</execution>
	<execution>
	    <id>upload-pmml</id>
	    <phase>install</phase>
	    <goals><goal>upload</goal></goals>
	    <configuration>
		<fromDir>${pmml.local.dir}</fromDir>
		<includes>*</includes>
		<url>${pmml.remote.url}</url>
		<toDir>${pmml.remote.dir}</toDir>
		<serverId>${pmml.remote.server.id}</serverId>
	    </configuration>
	</execution>
	<execution>
	    <id>upload-jar</id>
	    <phase>install</phase>
	    <goals><goal>upload</goal></goals>
	    <configuration>
		<fromDir>${jar.local.dir}</fromDir>
		<includes>*.jar</includes>
		<url>${jar.remote.url}</url>
		<toDir>${jar.remote.dir}</toDir>
		<serverId>${jar.remote.server.id}</serverId>
	    </configuration>
	   </execution>
	  </executions>
      </plugin>
    </plugins>
  </build>
   <properties>
        <!-- Settings for pmml files -->
        <pmml.local.dir>${basedir}/pmml</pmml.local.dir>
        <pmml.remote.dir>pmml</pmml.remote.dir>
