        <lib.remote.dir>lib</lib.remote.dir>
        <lib.remote.server.id>upload-dependency</lib.remote.server.id>
        <lib.remote.url>scp://ocularminds@ocularminds-01.kattare.com:/home3/o/ocularminds/eduzi</lib.remote.url>

        <!-- Settings for jar file-->
